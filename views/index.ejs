<%- include('partials/header') %>
<div class="container">
      <div class="header clearfix">
        <nav>
          <ul class="nav nav-pills pull-right">
            <% if(user) { %>
            <li role="presentation" class="active"><a href="/">Find churches</a></li>
            <li role="presentation"><a href="/users">Profile</a></li>
            <li role="presentation"><a href="/reviews">Reviews</a></li>
            <li role="presentation"><a href="/auth/logout">Logout</a></li>
            <% } else { %>
            <li role="presentation" class="active"><a href="/">Home</a></li>
            <li role="presentation"><a href="/auth/register">Register</a></li>
            <li role="presentation"><a href="/auth/login">Login</a></li>
            <% } %>
          </ul>
        </nav>
        <h3 class="text-muted">Good News</h3>
        <small id="slogan" class="text-muted">The gospel of good news is a person: Jesus of Nazareth.</small>
      </div>
      <% if(user) { %>
      <!-- DISPLAY CHURCH SEARCH -->
      <div id="inside">
        <div id="center">
        <p><%- messages('message', locals) %></p>
          <h4>Hey <%= user.firstname %>, enter a zipcode, city, or address below to find churches.</h4><span class="id"><%= user.id %></span>
          
          <form method="POST">
              <label class="sr-only">Search</label>
                <input type="text" id="church_search" title="Search" name="city" required><br>
                <input type="submit" name="submit" value="search">
                <input type="reset" name="reset" value="reset">
          </form>

        <!-- DISPLAY CHURCHES FROM DATABASE -->
        <% if(churches != 0) { %>
            <%- include('partials/churches') %>
        <% } %>
      <!-- END CHURCH SEARCH -->

            </div>
      </div>
      <% } else { %>
      <div class="jumbotron">
        <h4>Welcome to</h4>
        <h1>Good News</h1>
        <h4>The gospel is newsâ€”good news.</h4>
        <p class="lead">Travel often? or just simply looking for a new church? Well you're in the right place. Use our tool to help you find churches nearby. Once you've found a church you want to visit, you can send an SMS to yourself with the churches name and address. You can also leave reviews for churches you visited. Create memories!</p>
        <p><a class="btn btn-primary btn-lg" href="/auth/register" role="button">Sign up today</a></p>
      </div>
      <% } %>
    <%- include('partials/footer') %>
    </div>

<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
</body>
</html>